<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			inputmode="search"
			label="COM_CUSTOMTABLES_SEARCH_RECORD_TEXT"
			description="COM_CUSTOMTABLES_SEARCH_RECORD_TEXT_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="published"
			type="CTRecordStatus"
			label="JOPTION_SELECT_PUBLISHED"
			onchange="this.form.submit();"
			extension="com_customtables"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.id ASC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.published ASC">COM_CUSTOMTABLES_RECORD_HEADING_STATE_ASC</option>
			<option value="a.published DESC">COM_CUSTOMTABLES_RECORD_HEADING_STATE_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
